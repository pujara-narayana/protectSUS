# Application
APP_ENV=development
DEBUG=True
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=your-secret-key-here

# LLM Provider Configuration
# Choose one: anthropic, openai, gemini, openrouter
LLM_PROVIDER=anthropic

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI API (GPT-4, GPT-3.5)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini API
GOOGLE_API_KEY=your-google-api-key

# OpenRouter API (Access to multiple models)
OPENROUTER_API_KEY=your-openrouter-api-key

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=protectsus

# Neo4j
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Redis
REDIS_URL=redis://localhost:6379/0

# GitHub App
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY_PATH=./github-app-private-key.pem
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# GitHub OAuth (User Authentication)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_OAUTH_CALLBACK_URL=http://protectsus.tech/auth

# Token Company API
TOKEN_COMPANY_API_KEY=your-token-company-api-key
TOKEN_COMPANY_MODEL=bear-1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Arize Phoenix Tracing
PHOENIX_ENABLED=True
PHOENIX_BASE_URL=https://app.phoenix.arize.com/s/your-space
PHOENIX_API_KEY=your-phoenix-api-key
PHOENIX_CLIENT_HEADERS=
